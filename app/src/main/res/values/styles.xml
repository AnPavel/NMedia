<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.LikeCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/color_like</item>
        <item name="android:button">@drawable/ic_like_selector</item>
    </style>

    <style name="Widget.App.ShareButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="buttonTint">@color/color_share</item>
        <item name="android:button">@drawable/ic_share_selector</item>
    </style>

    <style name="Widget.AppTheme.ViewsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_views_24</item>
        <item name="iconTint">@color/color_default</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>


    <style name="Widget.App.RedEyeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="buttonTint">@color/color_redeye</item>
        <item name="android:button">@drawable/ic_redeye_selector</item>
    </style>

    <style name="Widget.App.MenuVert" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="buttonTint">@color/color_share</item>
        <item name="android:button">@drawable/ic_menu_vert_selector</item>
    </style>

    <style name="RoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/ic_baseline_arrow_upward_24</item>
        <item name="colorButtonNormal">#1a237e</item>
        <item name="colorControlHighlight">#673ab7</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize20Percent" parent="">
        <item name="cornerSize">20%</item>
    </style>

</resources>
